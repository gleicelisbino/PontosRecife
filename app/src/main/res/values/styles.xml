<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="texto_padrao">
        <item name="android:layout_marginTop">@dimen/top_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:textSize">@dimen/texto_corrido</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="link">
        <item name="android:layout_marginTop">@dimen/top_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:textSize">@dimen/texto_corrido</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="question">
        <item name="android:layout_marginTop">@dimen/top_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:textSize">@dimen/texto_corrido</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="img_banner">
        <item name="android:layout_marginTop">@dimen/top_margin</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="slide_img">
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="main_banner">
        <item name="android:layout_marginTop">@dimen/top_margin</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_height">250dp</item>
    </style>
    <style name="perfil_img_noticia">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>