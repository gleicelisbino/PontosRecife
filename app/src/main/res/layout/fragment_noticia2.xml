<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/top_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/header"
                    style="@style/titulo"
                    android:text="@string/noticia2"
                    app:layout_constraintHorizontal_bias="0.5" />
                <TextView
                    android:id="@+id/sub"
                    style="@style/texto_padrao"
                    android:text="@string/noticia2_sub"
                    app:layout_constraintHorizontal_bias="0.5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/top_margin"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/foto"
                        style="@style/perfil_img_noticia"
                        android:src="@drawable/gleiceredondo"/>
                    <TextView
                        android:id="@+id/autor"
                        style="@style/texto_padrao"
                        android:layout_margin="0dp"
                        android:text="@string/gleice_name"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/banner"
                    style="@style/img_banner"
                    android:src="@drawable/noticia2" />
                <TextView
                    android:id="@+id/texto"
                    style="@style/texto_padrao"
                    android:text="@string/lorem_ipsum"
                    app:layout_constraintHorizontal_bias="0.5" />
                <TextView
                    android:id="@+id/texto2"
                    style="@style/texto_padrao"
                    android:text="@string/lorem_ipsum"
                    app:layout_constraintHorizontal_bias="0.5" />
                <TextView
                    android:id="@+id/texto3"
                    style="@style/texto_padrao"
                    android:text="@string/lorem_ipsum"
                    app:layout_constraintHorizontal_bias="0.5" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>