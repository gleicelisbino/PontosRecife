<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/textView13"
                    style="@style/titulo"
                    android:text="@string/about_us_title"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageButton
                    android:id="@+id/gleice_button"
                    style="@style/img_button"
                    android:src="@drawable/gleiceredondo" />

                <TextView
                    style="@style/texto_padrao"
                    android:text="@string/gleice_name" />

                <ImageButton
                    android:id="@+id/joao_button"
                    style="@style/img_button"
                    android:src="@drawable/joaoredondo" />

                <TextView
                    style="@style/texto_padrao"
                    android:text="@string/joao_name" />

                <ImageButton
                    android:id="@+id/rodolfo_button"
                    style="@style/img_button"
                    android:src="@drawable/rodolforedondo" />

                <TextView
                    style="@style/texto_padrao"
                    android:text="@string/rodolfo_name" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>