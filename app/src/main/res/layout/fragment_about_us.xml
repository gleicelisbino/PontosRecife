<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="411dp"
                    android:layout_height="306dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginBottom="24dp"
                    android:background="@android:color/holo_blue_dark"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintVertical_bias="1.0"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="348dp"
                    android:layout_height="76dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="160dp"
                    android:fontFamily="cursive"
                    android:text="ConheÃ§a nossa equipe"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.484"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageButton
                    android:id="@+id/gleice_button"
                    android:layout_width="@dimen/img_button_width"
                    android:layout_height="@dimen/img_button_height"
                    android:layout_marginVertical="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gleiceredondo" />

                <ImageButton
                    android:id="@+id/joao_button"
                    android:layout_width="@dimen/img_button_width"
                    android:layout_height="@dimen/img_button_height"
                    android:layout_marginVertical="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/joaoredondo" />

                <ImageButton
                    android:id="@+id/rodolfo_button"
                    android:layout_width="@dimen/img_button_width"
                    android:layout_height="@dimen/img_button_height"
                    android:layout_marginVertical="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rodolforedondo" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>